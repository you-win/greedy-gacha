extends KinematicBody2D

const SPEED: float = 100.0

var lifetime: float = 10.0

var movement_vector: Vector2

###############################################################################
# Builtin functions                                                           #
###############################################################################

func _ready() -> void:
	movement_vector *= SPEED

func _physics_process(delta: float) -> void:
	lifetime -= delta
	if lifetime <= 0:
		self.queue_free()
	
	move_and_slide(movement_vector * delta * 100)

